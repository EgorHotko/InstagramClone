extends baseNavbar.pug
block append head
    link(rel="stylesheet", href="/css/logInPage.css")
block content
    div(class="login-container")
        a(class="google-btn" href="/auth/google") LogIn with Google+
        div(class="login-content")
            form
                div(class="form-group")
                    label(for="formGroupUserInput") Email
                    input(type="text" class="form-control" id="emailInput" placeholder="email")
                div(class="form-group")
                    label(for="formGroupUserInput") Password
                    input(type="password" class="form-control" id="passwordInput" placeholder="password")
                div(class="btn-wrapper")
                    button(class="btn-primary" type="button") Log in
                    